@model IEnumerable<DoAnNhom8.Models.KHACH>

@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<h2>Danh sách khách hàng</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Tên khách</th>
                <th>Số điện thoại</th>
                <th>Email</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenKhach)</td>
                    <td>@Html.DisplayFor(modelItem => item.SDT)</td>
                    <td>@Html.DisplayFor(modelItem => item.EMAIL)</td>
                    <td>
                        @Html.ActionLink("Chi tiết", "ChiTietKhachHang", new { @id = item.MaKhach }, new { @class = "btn btn-primary btn-sm" })
                    </td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa thông tin", "SuaKhachHang", new { @id = item.MaKhach }, new { @class = "btn btn-info" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
