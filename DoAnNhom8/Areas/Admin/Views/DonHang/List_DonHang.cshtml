@model IEnumerable<DoAnNhom8.Models.HOADON>
@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}

<style>
    /* CSS cho bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th,
        .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

    /* CSS cho nút Chi tiết và Xóa */
    .action-links {
        display: flex;
        justify-content: space-between;
    }

        .action-links a {
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 4px;
        }

            .action-links a:hover {
                background-color: #f2f2f2;
            }
</style>

<h2>DANH SÁCH ĐƠN HÀNG</h2>

<p></p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã hóa đơn
            </th>
            <th>
                Mã khách hàng
            </th>
            <th>
                Tổng tiền
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaHoaDon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKhach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongTien)
                </td>
                <td class="action-links">
                    @Html.ActionLink("Chi tiết", "ChiTietDonHang", new { @maHD = item.MaHoaDon }, new { @class = "btn btn-info" }) |
                </td>
            </tr>
        }
    </tbody>
</table>
